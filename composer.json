{
    "name": "lmammino/e-foundation",
    "description": "A set of classes that can be useful to build your own PHP e-commerce solution. Heavily inspired by Sylius and Spreecommerce",
    "minimum-stability": "dev",
    "license": "MIT",
    "authors": [
        {
            "name": "Luciano Mammino",
            "email": "lucianomammino@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.4",
        "doctrine/collections": "~1.2"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.3",
        "sami/sami": "~2.0",
        "squizlabs/php_codesniffer": "1.*",
        "doctrine/orm": "~2.4"
    },
    "suggest": {
        "doctrine/orm": "To enable doctrine integration",
        "lmammino/e-foundation-bundle": "For a simple integration with Symfony2"
    },
    "autoload": {
        "psr-4": {
            "LMammino\\EFoundation\\": "src/",
            "LMammino\\EFoundation\\Tests\\": "tests/"
        }
    }
}
